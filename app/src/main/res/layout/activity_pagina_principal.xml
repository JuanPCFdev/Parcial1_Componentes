<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dinero"
    tools:context=".PaginaPrincipalActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="#BADDA6"
        android:gravity="center"
        android:text="Bienvenido a la alcancia virtual."
        android:textAppearance="@color/design_default_color_on_primary"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#BADDA6"
        android:gravity="center"
        android:text="Saldo:"
        android:textAppearance="@color/design_default_color_on_primary"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/EditTextSaldo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="#BADDA6"
        android:gravity="center"
        android:hint="$0000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <Button
        android:id="@+id/BtnAhorrar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#389900"
        android:gravity="center"
        android:text="Ahorrar dinero"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/BtnRetirar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#389900"
        android:gravity="center"
        android:text="Retirar dinero"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/BtnHistorial"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:backgroundTint="#389900"
        android:gravity="center"
        android:text="Ver historial"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>